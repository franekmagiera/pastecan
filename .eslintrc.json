{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/jsx-filename-extension": ["off", { "extensions": [".tsx"]}],
        "react/react-in-jsx-scope": ["off"],
        "react/jsx-one-expression-per-line": ["off"],
        "no-unused-vars": ["off", { "varsIgnorePattern": "^h$" }],
        "import/extensions": ["off", { "extensions": [".tsx"]}],
        "react/destructuring-assignment": ["off"]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".ts", ".tsx", ".d.ts"]
            }
        }
    }
}
